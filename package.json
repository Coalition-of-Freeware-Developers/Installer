{
  "name": "coalition-installer",
  "productName": "Coalition of Freeware Developers - Installer",
  "version": "1.1.0-dev.1",
  "type": "module",
  "description": "Desktop application to install and customize X-Plane 12 addons",
  "configUrls": {
    "production": "",
    "confidentialBaseUrl": ""
  },
  "main": "out/main/index.js",
  "scripts": {
    "generate-licenses": "node scripts/licenses.js",
    "platform-check": "node scripts/build-platform-check.js",
    "dev-platform": "node scripts/dev-platform.js",
    "start": "electron-vite",
    "dev": "electron-vite dev",
    "dev:win": "node scripts/dev-platform.js win32 dev",
    "dev:mac": "node scripts/dev-platform.js darwin dev",
    "dev:linux": "node scripts/dev-platform.js linux dev",
    "build": "npm run generate-licenses && electron-vite build",
    "package": "npm run platform-check && npm run build && electron-builder --win --publish=never",
    "package:win": "BUILD_PLATFORM=win32 npm run platform-check && npm run build && electron-builder --win --publish=never",
    "package:mac": "BUILD_PLATFORM=darwin npm run platform-check && npm run build && electron-builder --mac --publish=never",
    "package:linux": "BUILD_PLATFORM=linux npm run platform-check && npm run build && electron-builder --linux --publish=never",
    "package:all": "npm run platform-check && npm run build && electron-builder --win --mac --linux --publish=never",
    "package:current": "npm run platform-check && npm run build && electron-builder --publish=never",
    "dist": "npm run platform-check && npm run build && electron-builder --publish=always",
    "dist:win": "BUILD_PLATFORM=win32 npm run platform-check && npm run build && electron-builder --win --publish=always",
    "dist:mac": "BUILD_PLATFORM=darwin npm run platform-check && npm run build && electron-builder --mac --publish=always",
    "dist:linux": "BUILD_PLATFORM=linux npm run platform-check && npm run build && electron-builder --linux --publish=always",
    "dist:current": "npm run platform-check && npm run build && electron-builder --publish=always",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": "The Coalition of Freeware Developers",
  "license": "GPL-3.0",
  "build": {
    "extraResources": [
      "./extraResources/**"
    ],
    "appId": "com.coalition-installer",
    "productName": "Coalition Installer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "nsis": {
      "include": "scripts/installer.nsh",
      "artifactName": "Coalition_Installer_Setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "src/main/icons/icon.ico",
      "files": [
        "out/**/*"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "src/main/icons/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "src/main/icons/icon.png",
      "category": "Utility",
      "synopsis": "X-Plane 12 addon installer and manager",
      "description": "Desktop application to install and customize X-Plane 12 addons from the Coalition of Freeware Developers"
    },
    "dmg": {
      "title": "Coalition Installer",
      "icon": "src/main/icons/icon.icns",
      "background": "build/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.27.0",
    "@babel/preset-env": "^7.27.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/config-array": "^0.21.0",
    "@eslint/js": "^9.30.0",
    "@eslint/object-schema": "^2.1.6",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@redux-devtools/extension": "^3.3.0",
    "@svgr/webpack": "^8.1.0",
    "@types/adm-zip": "^0.5.7",
    "@types/dateformat": "^5.0.3",
    "@types/electron-devtools-installer": "^2.2.5",
    "@types/react": "^17.0.87",
    "@types/react-dom": "^17.0.26",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@types/webpack": "^5.28.5",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@webpack-cli/serve": "^3.0.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "electron": "^32.2.5",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.1",
    "electron-vite": "^2.3.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "html-webpack-plugin": "^5.6.3",
    "inspectpack": "^4.7.1",
    "less": "^4.3.0",
    "less-loader": "^12.3.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.1.2",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "sass": "^1.89.2",
    "style-loader": "^4.0.0",
    "svgo": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "url-loader": "^4.1.1",
    "vite": "^5.4.19",
    "vite-plugin-commonjs-externals": "^0.1.1",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-node-polyfills": "^0.23.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/js-yaml": "^4.0.9",
    "@types/ws": "^8.18.1",
    "buffer": "^6.0.3",
    "check-disk-space": "^3.4.0",
    "config-ini-parser": "^1.6.1",
    "dateformat": "^5.0.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.0",
    "immer": "^10.1.1",
    "js-yaml": "^4.1.0",
    "js-yaml-loader": "^1.2.2",
    "marked": "^16.0.0",
    "nanoid": "^5.1.5",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-bootstrap-icons": "^1.11.6",
    "react-detect-offline": "^2.4.5",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.34.0",
    "react-markdown": "^8.0.7",
    "react-redux": "^7.2.9",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4",
    "react-windows-controls": "^1.1.1",
    "redux": "^4.2.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^3.0.1",
    "semver": "^7.7.2",
    "simplebar-react": "^3.3.2",
    "steam-locate": "^1.0.3",
    "styled-components": "^5.3.11",
    "tabler-icons-react": "^1.56.0",
    "walkdir": "^0.4.1",
    "ws": "^8.18.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix"
    ]
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5",
    "winreg": "^1.2.5"
  }
}
